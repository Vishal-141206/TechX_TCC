<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Don't backup sensitive user data -->
    <exclude domain="sharedpref" path="sensitive_preferences.xml"/>
    <exclude domain="database" path="transactions.db"/>
    <exclude domain="file" path="models/"/>
    <exclude domain="file" path="private/"/>

    <!-- Include app configuration -->
    <include domain="sharedpref" path="app_settings.xml"/>
    <include domain="file" path="config/"/>
</full-backup-content>